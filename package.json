{
  "name": "shell",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build": "npm run build:shell && npm run build:authapp && npm run build:styleguide && npm run build:profile ",
    "build:shell": "ng build --c development",
    "build:authapp": "cd Mfes/authapp && npm run build:dev",
    "build:styleguide": "cd Mfes/styleguide && npm run build:dev",
    "build:profile": "cd Mfes/user-profile && npm run build:dev",
    "ins": "npm run ins:shell && npm run ins:authapp && npm run ins:styleguide && npm run ins:profile",
    "ins:shell": "npm install",
    "ins:authapp": "cd Mfes/authapp && npm install",
    "ins:styleguide": "cd Mfes/styleguide && npm install",
    "ins:profile": "cd Mfes/user-profile && npm install",
    "start": "npx ng serve --port 8080",
    "watch": "ng build --watch --c development",
    "test": "ng test --code-coverage --browsers=ChromeHeadless",
    "run:all": "node node_modules/@angular-architects/module-federation/src/server/mf-dev-server.js",
    "lint": "ng lint",
    "format": "npx prettier --write .",
    "prepare": "husky",
    "serve": "http-server -p 8000 -c-1 -o --proxy http://localhost:8000? dist/shell"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation-tools": "^17.0.8",
    "@angular/animations": "^17.3.0",
    "@angular/cdk": "^17.3.7",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/material": "^17.3.9",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "http-server": "^14.1.1",
    "rxjs": "^7.8.0",
    "shell": "file:",
    "tslib": "^2.3.0",
    "zone.js": "^0.14.3"
  },
  "devDependencies": {
    "@angular-architects/module-federation": "^17.0.8",
    "@angular-devkit/build-angular": "^17.3.6",
    "@angular-eslint/builder": "17.4.0",
    "@angular-eslint/eslint-plugin": "17.4.0",
    "@angular-eslint/eslint-plugin-template": "17.4.0",
    "@angular-eslint/schematics": "17.4.0",
    "@angular-eslint/template-parser": "17.4.0",
    "@angular/cli": "^17.3.6",
    "@angular/compiler-cli": "^17.3.0",
    "@types/jasmine": "^5.1.0",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "compression-webpack-plugin": "^11.1.0",
    "concurrently": "^9.1.0",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jasmine-core": "^5.1.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
